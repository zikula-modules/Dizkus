{# Subtopics collection  #}
{% if forum is defined or managedForum is defined %}
    {% if managedForum is defined %}
    {% else %}
        {% set managedForum=getForumManager(forum) %}
    {% endif %}
    <div class="list-group-item list-group-item-info noborder">
        <div class="row">
            <div class="col-md-2">
                {#               {% if forum is not defined %}
                                   <a id="forumlink_{{ parent.name}}"
                                      class="tooltips"
                                      title="{{ __("Go to forum")}} '{{ parent.name | escape('html')}}'"
                                      href="{{ path('zikuladizkusmodule_forum_viewforum', {'forum': parent.forum_id})}}">
                                       <i class="fa fa-comments"></i>&nbsp;{{ parent.name | upper | escape('html')}}</a>
                                   {% endif %}#}
                {{ __('Status')}}
            </div>
            <div class="col-md-4">
                {{ __('Topic')}}
            </div>
            <div class="col-md-1">
                {{ __("Replies") | upper}}
            </div>
            <div class="col-md-1">
                {{ __("Views") | upper}}
            </div>
            <div class="col-md-4 pull-right">
                {{ __('Last post') | upper}}
            </div>
        </div>
    </div>
    <ul class="list-group">
        {% for topic in managedForum.getCurrentTopics() %}
            <li class="list-group-item">
                <div class="row">
                    <div class="data col-md-2">
                        <span class="fa-stack">
                            <i title='{{ __("No reply since your last visit.")}}' class="fa fa-stack-2x fa-comments-o fa-flip-horizontal"></i>
                            {% if managedForum.get.last_post.post_time is defined and (date(forum.last_post.post_time) > date(currentForumUser.getLastVisit())) %}
                                <i title='{{ __("New reply since your last visit.")}}' class="fa fa-commenting fa-flip-horizontal fa-orange" style="font-size:1.4em; margin-left: 7px;"></i>
                            {% else %}
                                {# icons debug #}
                                {#<i title='{{ __("New reply since your last visit.")}}' class="fa fa-commenting fa-flip-horizontal fa-orange" style="font-size:1.4em; margin-left: 7px;"></i>#}
                            {% endif %}
                        </span>

                        {% if topic.sticky == 1 %}
                            <i title='{{ __("Topic is pinned to top of list.")}}' class="{{ sticky_icon_class }} fa-blue tooltips"></i>
                        {% else %}
                        {% endif %}
                        {% if topic.status == 1 %}
                            <i title='{{ __("This topic is locked.")}}' class="fa fa-lock tooltips"></i>
                        {% endif %}
                        {% if topic.solved > 0 %}
                            <i title='{{ __("This topic is solved.")}}' class="fa fa-check fa-green tooltips"></i>
                        {% elseif topic.solved == -1 %}
                            <i title='{{ __("This topic is a support request.")}}' class="fa fa-question fa-red tooltips"></i>
                        {% endif %}
                    </div>
                    <div class="description col-md-4">
                        <a class="topictitle tooltips"
                           href="{{ path('zikuladizkusmodule_topic_viewtopic', {'topic': topic.id, 'start' : 1}) ~ '#/post/' ~ topic.last_post.id }}"
                           title="{{ __('Go to topic') }} {{ topic.title }}">
                            {{ topic.title }}
                        </a>
                        <div class="text-muted">
                            <small>{{ __f("by %s", {'%s': topic.poster.user.uname})}} {{ __('on')}} {{ topic.firstPostTime | date('Y-m-d H:i:s')}}</small>
                            {% set total_posts=topic.replyCount+50 %}
                            {% for i in range(0, total_posts, settings.posts_per_page) %}
                                <a href="{{ path('zikuladizkusmodule_topic_viewtopic', {'topic': topic.topic_id, 'page': loop.index})}}">{{ loop.index}}</a>{% if loop.last %}{% else %}, {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="data col-md-1 text-center">
                        {% if topic.replyCount >= 1 %}
                            <span title='{{ __("Hot topic")}}' class="fa-red tooltips"><i class="fa fa-fire"></i>&nbsp;{{ topic.replyCount | escape('html')}}</span>
                        {% else %}
                            {{ topic.replyCount | escape('html')}}
                        {% endif %}
                    </div>
                    <div class="data col-md-1 text-center">
                        {{ topic.viewCount | escape('html')}}
                    </div>
                    <div class="lastpost col-md-4 pull-right">
                        {% if topic.last_post is defined %}
                            {{ include("@ZikulaDizkusModule/User/lastPostBy.html.twig", {'last_post': topic.last_post})}}
                        {% endif %}
                    </div>
                </div>
            </li>
        {% else %}
            <li class="list-group-item">
                <div class="text-center warning">
                    {{ __('No subforums available.')}}
                </div>
            </li>
        {% endfor %}
    </ul>
    {{ pager({rowcount:currentForum.getCurrentTopics|length,
                        limit:settings.topics_per_page,
                        class:'pull-right',
                        posvar:'start',
                        route:'zikuladizkusmodule_forum_viewforum',
                        template:'@ZikulaDizkusModule/Forum/forum.topics.pager.html.twig'}) }}
{% else %}
    <div class="list-group-item list-group-item-info">
        {{  __('Forum not found in singleforumtable.html.twig')}}
    </div>
{% endif %}

{# Topics collection 
<table class="table table-condensed">
    <thead>
        <tr class="active">
            <th colspan='2'>{{ __("Topic") | upper}}</th>
            <th class="data">{{ __("Replies") | upper}}</th>
            <th class="data">{{ __("Views") | upper}}</th>
            <th class="lastpost">{{ __("Last post") | upper}}</th>
            {% if moderate %}<th class="data">{{ __('All') | upper}}&nbsp;<input type="checkbox" id="alltopic" value="" onclick="jQuery('.topic_checkbox').attr('checked', this.checked);" /></th>{% endif %}
        </tr>
    </thead>
    <tbody>
        {% for topic in topics %}
        <tr>
            <td class="data">
                {% if forum is defined and forum.last_post.post_time is defined %}
                {% set comp=(date(forum.last_post.post_time) > date(last_visit_unix)) %}
                {% else %}
                {% set comp=false %}
                {% endif %}
                <span class="fa-stack fa-2x">
                    {% if topic.sticky == 1 %}
                    <i title='{{ __("Topic is pinned to top of list.")}}' class="fa fa-bullhorn fa-stack-2x tooltips"></i>
                    {% else %}
                    <i class="fa fa-comment-o fa-stack-2x"></i>
                    {% endif %}
                    {% if topic.status == 1 %}<i title='{{ __("This topic is locked.")}}' class="fa fa-lock fa-stack-1x fa-black fa-overlay-lower-right tooltips"></i>{% endif %}
                    {% if comp %}<i class="fa fa-star fa-stack-1x fa-overlay-upper-left fa-blue"></i>{% endif %}
                </span>
            </td>
            <td class="description">
                <h4>
                    {% if topic.solved > 0 %}
                    <i title='{{ __("This topic is solved.")}}' class="fa fa-check fa-green tooltips"></i>
                    {% elseif topic.solved == -1 %}
                    <i title='{{ __("This topic is a support request.")}}' class="fa fa-question fa-red tooltips"></i>
                    {% endif %}
                    {{ topic.topic_id | viewTopicLink(topic.title | striptags | truncate(50, true))}}                
                </h4>
                <div class="text-muted">

                    <small>{{ __f("by %s", {'%s': topic.poster.user.uname})}} {{ __('on')}} {{ topic.firstPostTime | date('Y-m-d H:i:s')}}</small>
                    {% set total_posts=topic.replyCount+50 %}
                    {% for i in range(0, total_posts, settings.posts_per_page) %}
                    <a href="{{ path('zikuladizkusmodule_topic_viewtopic', {'topic': topic.topic_id, 'page': loop.index})}}">{{ loop.index}}</a>{% if loop.last %}{% else %}, {% endif %}
                    {% endfor %}
                </div>
            </td>
            <td class="data">
                {% if topic.replyCount >= settings.hot_threshold %}
                <span title='{{ __("Hot topic")}}' class="fa-red tooltips"><i class="fa fa-fire"></i>&nbsp;{{ topic.replyCount | escape('html')}}</span>
                {% else %}
                {{ topic.replyCount | escape('html')}}
                {% endif %}
            </td>
            <td class="data">{{ topic.viewCount | escape('html')}}</td>
            <td class="lastpost">
                {% if topic.last_post is defined %}
                {{ include("@ZikulaDizkusModule/User/lastPostBy.html.twig", {'last_post': topic.last_post})}}
                {% endif %}
            </td>
            {% if moderate %}<td class="data"><input type="checkbox" class="topic_checkbox" name="topic_id[]" value="{{ topic.topic_id}}"/></td>{% endif %}
        </tr>
        {% else %}
        <tr>
            {% if moderate %}{% set cols='7' %}{% else %}{% set cols='6' %}{% endif %}
            <td colspan='{{ cols}}' class="text-center warning">
                {{ __("No subforums available.")}}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

#}